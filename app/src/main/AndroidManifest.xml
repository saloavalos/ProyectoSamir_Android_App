<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saloavalos.android_app_samir">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.saloavalos.android_app_samir.activities.SignInActivity"></activity>
        <activity android:name="com.saloavalos.android_app_samir.activities.SignUpActivity" />
        <activity android:name="com.saloavalos.android_app_samir.activities.SecondActivity" />
        <activity android:name="com.saloavalos.android_app_samir.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- android:name="android.support.v4.content.FileProvider" -->
        <!-- lo cambie y use la linea de abajo -->
        <!-- android:name="androidx.core.content.FileProvider" -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.saloavalos.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>